{
  "name": "html-importer",
  "version": "0.0.0-semantically-released",
  "description": "Import HTML-snippets to build a single HTML file.",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel --copy-files --out-dir dist --ignore test/*.js src",
    "prebuild": "rimraf dist",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "mocha src/test/index.js --compilers js:babel-register",
    "test:watch": "npm t -- -w",
    "cover": "nyc npm t"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seebaermichi/html-importer"
  },
  "keywords": [
    "html",
    "builder",
    "snippets"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Michael Becker <micha.becker79@gmail.com> (https://github.com/seebaermichi)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/seebaermichi/html-importer/issues"
  },
  "homepage": "https://github.com/seebaermichi/html-importer",
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "nyc": {
    "exclude": [
      "src/test/*.js",
      "dist"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.9.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "6.9.0",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.8.1",
    "cz-conventional-changelog": "1.1.6",
    "ghooks": "1.2.1",
    "mocha": "2.4.5",
    "nyc": "6.4.4",
    "rimraf": "2.5.2",
    "semantic-release": "^4.3.5"
  }
}
